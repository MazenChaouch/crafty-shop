// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model product {
  id         String    @id @default(cuid())
  name       String
  link       String
  details    String
  oldPrice  Int?
  price      Int
  discount   Int?
  image      String
  rating     Float?    @default(0)
  featured   Boolean
  available  Boolean
  orders     order[]
}

model order {
  id         String    @id @default(cuid())
  name       String
  lastname   String
  email      String
  telephone  String
  address    String
  status     String
  total      Float
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  products   product[]
}
