// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model product {
  id         String    @id @default(cuid())
  name       String
  details    String
  price      Float
  image      String
  featured   Boolean
  available  Boolean
  created_at DateTime? @default(now())
  updated_at DateTime? @updatedAt
  orders     order[]
}

model order {
  id         String    @id @default(cuid())
  name       String
  lastname   String
  email      String
  telephone  String
  address    String
  status     String
  total      Float
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  products   product[]
}
